<build>
  <plugins>
    <plugin>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-pmd-plugin</artifactId>
      <version>3.15.0</version> <!-- Ensure this is the version you intend to use -->
      <executions>
        <execution>
          <phase>validate</phase> <!-- Bind PMD to the 'validate' phase -->
          <goals>
            <goal>pmd</goal>
          </goals>
        </execution>
      </executions>
      <configuration>
        <rulesets>
          <ruleset>rulesets/java/basic.xml</ruleset>
          <ruleset>rulesets/java/empty.xml</ruleset>
          <ruleset>rulesets/java/imports.xml</ruleset>
          <ruleset>rulesets/java/unnecessary.xml</ruleset>
          <ruleset>rulesets/java/unusedcode.xml</ruleset>
        </rulesets>
      </configuration>
    </plugin>
  </plugins>
</build>
<file name="src/main/java/com/example/demo/SomeClass.java">
    <violation rule="UnusedPrivateField" beginline="15" endline="15" msg="The field 'unusedVariable' is never used." />
    <violation rule="AvoidMethodLength" beginline="20" endline="45" msg="This method is too long (should be <= 20 lines)." />
</file>
