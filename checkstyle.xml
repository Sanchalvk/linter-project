<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "http://checkstyle.sourceforge.net/dtds/configuration_1_3.dtd">

<checkstyle>
    <module name="Checker">
        <module name="TreeWalker">
            
            <!-- JavadocMethod Module Configuration -->
            <module name="JavadocMethod">
                <!-- Remove the minLines property or adjust it based on your needs -->
                <property name="allowedExceptions" value="java.lang.Throwable"/>
                <property name="allowMultiple" value="true"/>
            </module>

            <!-- Add other Checkstyle modules here as needed -->
        </module>
    </module>
</checkstyle>
