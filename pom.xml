<build>
    <plugins>
        <!-- PMD Plugin -->
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-pmd-plugin</artifactId>
            <version>3.15.0</version>
            <executions>
                <execution>
                    <phase>validate</phase>
                    <goals>
                        <goal>pmd</goal>
                    </goals>
                </execution>
            </executions>
            <configuration>
                <rulesets>
                    <ruleset>pmd.xml</ruleset> <!-- Make sure pmd.xml is present -->
                </rulesets>
            </configuration>
        </plugin>

        <!-- Checkstyle Plugin -->
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-checkstyle-plugin</artifactId>
            <version>3.1.2</version> <!-- Update to the latest version if needed -->
            <configuration>
                <configLocation>checkstyle.xml</configLocation> <!-- Make sure checkstyle.xml is present -->
                <failsOnError>true</failsOnError>
                <linkXRef>false</linkXRef>
            </configuration>
            <executions>
                <execution>
                    <phase>validate</phase>
                    <goals>
                        <goal>check</goal>
                    </goals>
                </execution>
            </executions>
        </plugin>
    </plugins>
</build>